<!DOCTYPE html>

<html>

  <head>
    <% include ../static/partials/head.ejs %>
  </head>

  <body>

    <main class="container">
      <% include ../static/partials/navbar.ejs %>

      <h1>Add Collaborators</h1>

        <table class="table table-hover">

          <tr class="text-center">
            <th>Username</th>
            <th>Email</th>
            <th>Add</th>
            <th>Remove</th>
          </tr>

             <% users.forEach((user) => { %>

                <tr>
                    <td><%= user.username %></td>
                    <td><%= user.email %></td>
                    <td class="text-center">
                      <% if (!user.isCollaborator) { %>
                      <form action="collaborators/add" method="POST">
                          <button name="userId" value="<%= user.id %>" type="submit" class="btn btn-success">Add</button>
                      </form>
                      <% } %>
                    <td>
                      <% if (user.isCollaborator) { %>
                      <form action="collaborators/destroy" method="POST">
                          <button name="userId" value="<%= user.id %>" type="submit" class="btn btn-danger">Remove</button>
                      </form>
                      <% } %>
                    </td>
                </tr>

            <% }) %>

          </table>

    </main>

  </body>

</html>
